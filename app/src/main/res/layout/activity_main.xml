<!-- app/src/main/res/layout/activity_main.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Seção de Saldo -->
    <TextView
        android:id="@+id/saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saldo"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="32dp" />

    <!-- Linha de Separação -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <!-- Seção de Resumo de Receitas e Despesas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/totalReceitas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Receitas: "
            android:textSize="16sp"
            android:gravity="center"
            android:padding="4dp" />

        <TextView
            android:id="@+id/totalDespesas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Despesas: "
            android:textSize="16sp"
            android:gravity="center"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Linha de Separação -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <!-- Cabeçalho da Tabela -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="Descrição"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lançamento"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Valor"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Data"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Linha de Separação -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp" />

    <!-- Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnEditarLancamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar Lançamento"
            android:backgroundTint="#808080"
            android:textColor="#FFFFFF"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnNovoLancamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Novo Lançamento"
            android:backgroundTint="#0000FF"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>